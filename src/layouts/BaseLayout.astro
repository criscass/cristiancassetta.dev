---
import BaseHead from "../components/layouts/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION, TRANSITION_API } from "../config";
import { ViewTransitions } from "astro:transitions";
import Header from "../components/layouts/Header.astro";

const { image, title = SITE_TITLE, description = SITE_DESCRIPTION, ogType } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="lofi">
	<head>
		<BaseHead title={title} description={description} image={image} , ogType={ogType} />
		{TRANSITION_API && <ViewTransitions />}
	</head>
	<body class="bg-neutral-100">
		<Header />
		<slot />
	</body>
</html>
